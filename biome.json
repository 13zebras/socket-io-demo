{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded",
			"quoteProperties": "asNeeded",
			"lineWidth": 100,
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	}
}
